---
import { Image } from 'astro:assets';
import CvLayout from "../layouts/CvLayout.astro";
import PageLayout from "../layouts/PageLayout.astro";
import CvCareer from "../components/CvCareer.astro";
import CvCertifications from "../components/CvCertifications.astro";
import CvEducation from "../components/CvEducation.astro";
import CvProjectWork from "../components/CvProjectWork.astro";
import CvTechSkills from "../components/CvTechSkills.astro";

import pic from "../assets/matt-miller-cutout.png";

---
<CvLayout title="The Curriculum Vitae of Matthew Miller" pageCount={2}>
	<PageLayout>
    <header>
      <div class="title-area">
        <Image src={pic} width="100" id="profile-pic" alt="My profile picture"/>
        <div>
          <h1>Matthew Miller</h1>
          <h2>Full Stack Software Engineer</h2>
        </div>
      </div>
      <nav>
        <ul>
          <li>Perth, Western Australia</li>
          <li>+61 (0) 409 388 123</li>
          <li>miller.matthew@gmail.com</li>
        </ul>
      </nav>
    </header>
    <main>
      <div>
        <section id="hello">
          <h2>Hello</h2>
          <p class="intro">
            I design and create modern software solutions. I have advanced knowledge of contemporary web
            frameworks, along with excellent database and server-side skills.
            With a <strong>career spanning 25 years</strong>, I bring both a wealth
            of experience and a passion to innovate and keep learning.
          </p>
        </section>
        <section id="career-summary">
          <h2>Tech Skills</h2>
          <CvTechSkills/>
        </section>
        <div class="qualifications-grid">
          <section id="education">
            <h2>Education</h2>
            <CvEducation />
          </section>
          <section id="certs">
            <h2>Certifications</h2>
            <CvCertifications/>
          </section>
        </div>
        <section id="projects">
          <h2>Project Work</h2>
          <CvProjectWork/>
        </section>
      </div>
      <article id="tech">
        <h2>Career</h2>
        <CvCareer details={2007}></CareerTimeline>
        <!-- <blockquote cite="https://hypermedia.systems/hypermedia-reintroduction/">
          <p>Truly, the job of the good software engineer is to keep complexity under control</p>
          - <cite>https://hypermedia.systems/</cite>
        </blockquote> -->
      </article>
    </main>
    <footer>
			<div>
				Built with Astro 4. View online <a href="https://matthewmiller.au/cv/">matthewmiller.au/cv/</a>
				Source code: <a href="https://github.com/matthew-s-miller/mm-web-cv">github.com/matthew-s-miller/mm-web-cv</a></div>
    </footer>
  </PageLayout>
</CvLayout>

<style lang="scss" is:global>
  @import "../util/breakpoints.scss";
  
  header {
    background-color: white;
    line-height: 1.1;
    display: grid;
    padding-block: 0.25in;
    border-top: 2px solid var(--secondary-color);
    border-bottom: 2px solid var(--secondary-color);

    @media print, screen and (min-width: $a4-page-width) {
      grid-template-columns: 2.6fr 1fr;
      column-gap: 0.4in;
      align-items: center;
    }

    .title-area {
      display: grid;

      @media print, screen and (min-width: $a4-page-width) {
        grid-template-columns: min-content 1fr;
        align-items: center;
        column-gap: 0.25in;
      }
    }
    
    nav ul {
      list-style-type: none;
      color: var(--accent-color);
      padding-inline-start: unset;
      font-size: 1.2rem;
      line-height: 1.5;
    }

    img {
      border-radius: 50%;
      background-color: var(--secondary-color);
    }

    svg {
      width: 0.875rem;
      height: 0.875rem;
    }

    h1 {
      font-size: 2.8rem;
      text-transform: uppercase;
      font-weight: 200;
      margin-block: unset;
    }

    h2 {
      font-weight: 400;
      font-size: 1.8rem;
      margin-block: unset;
    }
  }

  main {
    display: grid;

    @media print, screen and (min-width: $a4-page-width) {
      grid-template-columns: 2.6fr 1fr;
      column-gap: 0.4in;
    }
  }

  footer {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--secondary-color);
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;

    svg.icon {
      width: 14px;
      height: 14px;
    }

    a, svg {
      color: var(--accent-color) !important;
    }
  }

  section {
    position: relative;
  }

  ul.hyperlinks {
    padding-inline-start: unset;
    list-style-type: none;
    display: grid;
    grid-template-columns: min-content 1fr;
    gap: 0.5rem;

    li {
      grid-column: 1 / span 2;
      display: grid;
      grid-template-columns: subgrid;
      svg {
        width: 0.875rem;
        height: 0.875rem;
      }
    }
  }

  h2 {
    color: var(--accent-color);
    text-transform: uppercase;
    font-size: 1.25rem;
    margin-block: 1.6rem;
  }

  h3 {
    font-size: 1rem;
    margin-block: 0.125rem;
  }

  .qualifications-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  
  blockquote {
    margin-inline: unset;
    padding: 1rem;
    background-color: var(--secondary-color);
    border-radius: 1rem;
    p {
      color: var(--accent-color);

      &::before {
        content: '\201C';
      }

      &::after {
        content: '\201D';
      }
    }
  }

</style>